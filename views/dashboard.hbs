  <script src="app.js"></script>
  <script>
    // inteswitch contents
    $(document).ready(function() {
      $('.reels-header button').click(function() {
        $('.second-contents').show();
        $('.first-contents').hide();
      })
    });
    $(document).ready(function() {
      $('.stories-header button').click(function() {
        $('.second-contents').hide();
        $('.first-contents').show();
      })
    });
    // window onload add the active class
    window.addEventListener('load', () => {
      document.querySelector('.stories-header button').classList.add('active');
    })
    // when the reels-header is clicked add the active class 
    const btn = document.querySelector('.reels-header');
    btn.addEventListener('click', () => {
      document.querySelector('.reels-header button').classList.add('active');
      document.querySelector('.stories-header button').classList.remove('active');
    })
    // when the stories-header is clicked, add the active class
    const secBtn = document.querySelector('.stories-header');
    secBtn.addEventListener('click', () => {
      document.querySelector('.stories-header button').classList.add('active');
      document.querySelector('.reels-header button').classList.remove('active');
    })

  </script>
