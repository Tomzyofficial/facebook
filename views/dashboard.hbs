                <img src="images/profile-img.PNG" alt="">
                <img src="images/profile-img.PNG" alt="">
                <img src="images/profile-img.PNG" alt="">
                <img src="images/profile-img.PNG" alt="">
                <div class="card shadow chevron">
                  <i class="fa fa-chevron-right"></i>
                </div>
              </div>
            </div>
          </div>
          <!-- live-video, photo/video upload, feeling -->
          <div class="end-contents">
            <div class="card">
              <div class="top">
                <img src="images/profile-img.PNG" alt="">
